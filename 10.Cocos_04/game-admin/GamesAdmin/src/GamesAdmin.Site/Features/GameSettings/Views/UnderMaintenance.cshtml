@{ Layout = null; }

@using GamesAdmin.Site.Features.GameSettings.ViewModels;
@model UnderMaintenanceViewModel;

@{
    ViewData["Title"] = "Under Maintenance Schedule";
}

<div>
    <div class="message-success hidden-cls" id="successMsg"><i class="icon-check"></i><span>Updated successfully</span></div>
    <div class="message-error hidden-cls" id="failedMsg"><i class="icon-cancel"></i><span>Error</span></div>

    <form class="card-body form umModal" asp-action="UnderMaintenance" asp-controller="GameSettings" method="post" id="umForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <label asp-for="StartTime" class="control-label"></label>
            <input type="datetime-local" asp-for="StartTime" class="form-control" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="EndTime" class="control-label"></label>
            <input type="datetime-local" asp-for="EndTime" class="form-control" />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <input type="checkbox" class="checkbox-UM" asp-for="IsUM" />
            <label asp-for="IsUM" class="control-label"></label>
        </div>
    </form>
</div>
