@{ Layout = null; }

@using GamesAdmin.Site.Features.BolaConfig.ViewModels;
@model EditViewModel;

<div>
    <div class="message-success hidden-cls" id="successMsg"><i class="icon-check"></i><span>Updated successfully</span></div>
    <div class="message-error hidden-cls" id="failedMsg"><i class="icon-cancel"></i><span>Error</span></div>

    <form class="card-body form" asp-action="Edit" asp-controller="BolaConfig" method="post" id="editForm">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Currency" class="control-label"></label>
                    <input type="text" readonly asp-for="Currency" class="form-control" />
                    <span asp-validation-for="Currency" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Stakes" class="control-label"></label>
                    <input type="text" readonly asp-for="Stakes" class="form-control" />
                    <span asp-validation-for="Stakes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GroupCurrency" class="control-label">Group Currency</label>
                    <input type="text" required asp-for="GroupCurrency" class="form-control" />
                    <span asp-validation-for="GroupCurrency" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div>
                        <input type="checkbox" asp-for="IsEnable" />
                        <label asp-for="IsEnable" class="control-label">Is Enable</label>
                    </div>
                    <span asp-validation-for="IsEnable" class="text-danger"></span>
                </div>
            </div>
            </div>
    </form>
</div>