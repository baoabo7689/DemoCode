@using GamesAdmin.Site.Features.BolaConfig.ViewModels
@model ReportViewModel
@{ ViewData["Title"] = "Bola Tangkas Config"; }

@section Styles {
    <link href="~/scss/pages/bola-config.min.css" rel="stylesheet" asp-append-version="true" />
}
<form class="form filter bola-config" data-ajax="true" data-ajax-method="GET" asp-action="GetReport" data-ajax-mode="replace" data-ajax-update="#report-result"
      data-ajax-loading="#spinner" id="bolaConfigForm"
      method="get">
    <div class="form-row align-items-center">
        <div class="col-auto">
            <label asp-for="Currency" class="control-label"></label>
            <input type="text" class="form-control" asp-for="Currency">
        </div>

        <div class="col-auto mt-5">
            <button type="submit" class="btn-submit">Submit</button>
            <div id="spinner" class="spinner-border" style="display: none">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>

    <div class="list-actions">
        <input type="button" onclick="bolaConfig.showLoad()" value="Load New Config" class="btn-add btn-enable" />
    </div>
</form>



<div class="bola-config-report">
    <div id="report-result" class="col-sm-12 report-container">
    </div>
</div>

<div class="modal fade edit-modal" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Config</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body details-content" id="editdetails">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-gray" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-submit" id="updateBtn" onclick="bolaConfig.submitEdit()">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade edit-amount-modal" id="editAmountModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Config</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body details-content" id="editdetails">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-gray" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-submit" id="updateBtn" onclick="bolaConfig.submitEditAmount()">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade reload-modal" id="reloadModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation<span id="reloadTitle"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body reload-content-body">
                <div class="message-success hidden-cls" id="updateMsgSuccess"><i class="icon-check"></i><span>Configs reloaded!</span></div>
                <div class="message-error hidden-cls" id="updateMsgFailed"><i class="icon-cancel"></i><span>Error</span></div>
                <div id="reloadContent" class="reload-content"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-gray" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-submit" id="confirmBtn" onclick="bolaConfig.submitLoad()">OK</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/lib/jquery-unobtrusive-ajax/jquery.unobtrusive-ajax.js"></script>
    <script src="~/js/bola-config.min.js" asp-append-version="true"></script>
}