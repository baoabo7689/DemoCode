@{ Layout = null; }
@using GamesAdmin.Site.Features.Market.ViewModels;
@model EditViewModel;

@{
    ViewData["Title"] = Model.Name;
}

<div>
    @{
        <div class="message-success hidden-cls" id="successMsg"><i class="icon-check"></i><span>Updated successfully</span></div>
        <div class="message-error hidden-cls" id="failedMsg"><i class="icon-cancel"></i><span>Error</span></div>

        <form class="form" asp-action="Update" asp-controller="Market" method="post" id="marketForm">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Market Name</label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Currencies" class="control-label"></label>
                <input type="text" asp-for="Currencies" class="form-control" />
                <span asp-validation-for="Currencies" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefaultChipId" class="control-label"></label>
                <select asp-for="DefaultChipId" required asp-items="Model.ChipOptions" class="form-control"></select>
            </div>

            <div class="row form-group">
                <div class="col-6">
                    <div>
                        <input type="checkbox" asp-for="Enabled" />
                        <label asp-for="Enabled" class="control-label"></label>
                    </div>
                </div>
                <div class="col-6">
                    <div>
                        <input type="checkbox" asp-for="Cash" />
                        <label asp-for="Cash" class="control-label"></label>
                    </div>
                </div>
            </div>

            <div class="form-group button-group-footer">
                <button type="button" class="btn btn-gray" data-dismiss="modal">Close</button>
                <input type="button" value="Update" class="btn btn-submit" />
            </div>
        </form>
    }
</div>
