<div class="col-md-12 col-lg-5 card">
    <form class="card-body form" asp-action="Add" asp-controller="Market" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Currencies" class="control-label"></label>
            <input type="text" asp-for="Currencies" class="form-control" />
            <span asp-validation-for="Currencies" class="text-danger"></span>
        </div>

      <div  class="form-group">
           <label asp-for="DefaultChipId" class="control-label"></label>
           <select asp-for="DefaultChipId" required asp-items="Model.ChipOptions" class="form-control"></select>
      </div>

        <div class="row form-group">
            <div class="col-6">
                <div>
                    <input type="checkbox" asp-for="Enabled" />
                    <label asp-for="Enabled" class="control-label"></label>
                </div>
                <span asp-validation-for="Enabled" class="text-danger"></span>
            </div>
            <div class="col-6">
                <div>
                    <input type="checkbox" asp-for="Cash" />
                    <label asp-for="Cash" class="control-label"></label>
                </div>
                <span asp-validation-for="Cash" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn-submit" />
        </div>
    </form>
</div>


