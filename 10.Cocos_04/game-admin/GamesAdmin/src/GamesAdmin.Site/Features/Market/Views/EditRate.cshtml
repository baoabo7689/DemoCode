@{ Layout = null; }
@using GamesAdmin.Site.Features.Market.ViewModels;
@model EditRateViewModel;

@{
    ViewData["Title"] = Model.Name;
}

<div>
    @{
        <div class="message-success hidden-cls" id="successMsg"><i class="icon-check"></i><span>Updated successfully</span></div>
        <div class="message-error hidden-cls" id="failedMsg"><i class="icon-cancel"></i><span id="failedMsgContent">Error</span></div>

        <form class="form" asp-action="Update" asp-controller="Market" method="post" id="marketForm">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Market Name</label>
                <input type="text" asp-for="Name" class="form-control" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input type="number" asp-for="Rate" class="form-control" readonly="@Model.IsBase"/>
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div>
                    <input type="checkbox" asp-for="IsBase" onclick="market.onChangeBase()" readonly="@Model.IsBase"/>
                    <label asp-for="IsBase" class="control-label"></label>
                </div>
            </div>

            <div class="form-group button-group-footer">
                <button type="button" class="btn btn-gray" data-dismiss="modal">Close</button>
                <input type="button" value="Update" class="btn btn-submit" id="updateBtn" />
            </div>
        </form>
    }
</div>
