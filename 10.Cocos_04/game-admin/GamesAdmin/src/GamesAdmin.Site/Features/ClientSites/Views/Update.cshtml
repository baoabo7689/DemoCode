@using GamesAdmin.Site.Features.ClientSites.ViewModels;
@model UpdateClientSiteViewModel

@{
    ViewData["Title"] = "Update Client Site";
}


<div class="col-md-10 col-lg-6 card">
    <form class="card-body form-add form" method="post">
        <div class="form-group">
            <label asp-for="ClientId" class="control-label"></label>
            <input asp-for="ClientId" class="form-control" readonly />
            <span asp-validation-for="ClientId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SiteId" class="control-label"></label>
            <input asp-for="SiteId" class="form-control" readonly />
            <span asp-validation-for="SiteId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GameClientUrl" class="control-label"></label>
            <input asp-for="GameClientUrl" class="form-control" />
            <span asp-validation-for="GameClientUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ChinaUrl" class="control-label"></label>
            <input asp-for="ChinaUrl" class="form-control" />
            <span asp-validation-for="ChinaUrl" class="text-danger"></span>
        </div>

         <div class="form-group">
            <label asp-for="BrandName" class="control-label"></label>
            <input asp-for="BrandName" class="form-control" />
            <span asp-validation-for="BrandName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ValidCurrenciesText" class="control-label"></label>
            <input asp-for="ValidCurrenciesText" class="form-control" />
            <span asp-validation-for="ValidCurrenciesText" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SiteNamesText" class="control-label"></label>
            <input asp-for="SiteNamesText" class="form-control" />
            <span asp-validation-for="SiteNamesText" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn-submit" />
        </div>
    </form>
</div>
