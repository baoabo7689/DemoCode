@using GamesAdmin.Site.Features.ChipConfig.ViewModels
@model ReportViewModel
@{ ViewData["Title"] = "Chip Config"; }

@section Styles {
    <link href="~/scss/pages/chip-config.min.css" rel="stylesheet" asp-append-version="true" />
}

<div class="list-actions">
    <input type="button" onclick="chipConfig.showEditModal()" value="Add New" class="btn-add btn-enable" />
</div>

<div class="chip-config">
    <div id="report-result" class="col-sm-12 report-container">
        <partial name="_Records" for="@Model" />
    </div>
</div>

<div class="modal fade edit-modal" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Config</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body details-content" id="editdetails">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-gray" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-submit" id="updateBtn" onclick="chipConfig.submitEdit()">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-unobtrusive-ajax/jquery.unobtrusive-ajax.js"></script>
    <script src="~/js/chip-config.min.js" asp-append-version="true"></script>
}